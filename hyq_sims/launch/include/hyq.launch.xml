<launch>
    <arg name="x"       default="0.0"/>
    <arg name="y"       default="0.0"/>
    <arg name="z"       default="0.8"/>
    <arg name="roll"    default="0.0"/>
    <arg name="pitch"   default="0.0"/>
    <arg name="yaw"     default="0.0"/>

    <param name="robot_description" command="$(find xacro)/xacro.py $(find hyq_sims)/xacro/robot.xacro" />

    <node name="urdf_spawner"   pkg="gazebo_ros"    type="spawn_model"  respawn="false" output="screen" args="-urdf -x $(arg x) -y $(arg y) -z $(arg z) -Y $(arg yaw) -model hyq -param robot_description"/>

    <rosparam file="$(find hyq_sims)/config/hyq.yaml"   command="load"/>

    <node name="robot_state_publisher"  pkg="robot_state_publisher" ns="/hyq"   type="robot_state_publisher"    respawn="false" output="screen">
        <param name="publish_frequency" type="double"   value="30.0"/>
        <param name="ignore_timestamp"  type="bool"     value="true"/>
        <param name="tf_prefix"         type="string"   value="hyq" />
        <remap from="/joint_states"     to="/hyq/joint_states" />
    </node>


    <node name="spawner" pkg="controller_manager"   type="spawner"  respawn="false" output="screen" ns="/hyq"
            args="joint_state_controller
                  lf_haa_joint_position_controller
                  lf_hfe_joint_position_controller
                  lf_kfe_joint_position_controller
                  rf_haa_joint_position_controller
                  rf_hfe_joint_position_controller
                  rf_kfe_joint_position_controller
                  lh_haa_joint_position_controller
                  lh_hfe_joint_position_controller
                  lh_kfe_joint_position_controller
                  rh_haa_joint_position_controller
                  rh_hfe_joint_position_controller
                  rh_kfe_joint_position_controller">
    </node>
